{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": ["@kurocado-studio/styleguide/typescript/tsconfig.react.json"],
  "compilerOptions": {
    "types": ["@types/react", "vitest/globals", "@testing-library/jest-dom"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": ".",
    "baseUrl": ".",
    "jsx": "preserve"
  },
  "include": [
    "src",
    "tailwind.config",
    "test",
    "vite.config.ts",
    "tailwind.config.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
